<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Meal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Meal Name -->
        <EditText
            android:id="@+id/etMealName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Meal Name"
            android:inputType="textPersonName" />

        <!-- Available Portions -->
        <EditText
            android:id="@+id/etAvailablePortions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Available Portions"
            android:inputType="number"
            android:layout_marginTop="12dp" />

        <!-- Expiry Date -->
        <EditText
            android:id="@+id/etExpiresAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Expiry Date"
            android:layout_marginTop="12dp"
            android:focusable="false"
            android:clickable="true" />

        <!-- Description -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:hint="Description"
            android:layout_marginTop="12dp"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <!-- Original Price -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Original Price"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp" />

        <!-- Discount Percent -->
        <EditText
            android:id="@+id/etDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Discount % (0 - 100)"
            android:inputType="number"
            android:layout_marginTop="12dp" />

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/imgMeal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="#EDEDED"
            android:contentDescription="Meal Image Preview" />

        <!-- Choose Image -->
        <Button
            android:id="@+id/btnPickImage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Choose Image"
            android:layout_marginTop="12dp"
            android:backgroundTint="#22C55E"
            android:textColor="#FFFFFF" />

        <!-- Capture Image -->
        <Button
            android:id="@+id/btnCaptureImage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Capture Photo"
            android:layout_marginTop="8dp"
            android:backgroundTint="#22C55E"
            android:textColor="#FFFFFF" />

        <!-- Save Meal -->
        <Button
            android:id="@+id/btnSaveMeal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save Meal"
            android:layout_marginTop="24dp"
            android:backgroundTint="#22C55E"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
