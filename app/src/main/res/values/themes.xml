<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. The Base Application Theme. This is the master theme for the whole app. -->
    <style name="Base.Theme.SaveCampus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. This makes the App Bar, FAB, etc., green. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_primary</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- 2. This applies the Base Theme to your application. -->
    <style name="Theme.SaveCampus" parent="Base.Theme.SaveCampus" />

    <!-- 3. THIS IS THE FIX. The "NoActionBar" theme that your MainActivity needs. -->
    <style name="Theme.SaveCampus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 4. Custom Button Style for the solid green "Add Item" button. -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
